// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  username       String    @unique
  email          String?   @unique
  phone          String?   @unique
  password       String
  role           UserRole  @default(USER)
  isBanned       Boolean   @default(false)
  isSuspended    Boolean   @default(false)
  suspendedUntil DateTime?
  emailVerified  Boolean   @default(false)
  phoneVerified  Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  contents          Content[]
  editorials        Editorial[]
  vizLists          VizList[]
  approvalRequests  ApprovalRequest[] @relation("RequesterApprovals")
  creatorApprovals  ApprovalRequest[] @relation("CreatorApprovals")
  flagsReported     ContentFlag[]     @relation("FlagReporter")
  flagsReviewed     ContentFlag[]     @relation("FlagReviewer")
  adminActivityLogs AdminActivityLog[]
  
  // NextAuth relations
  accounts Account[]
  sessions Session[]
  
  // Viz.Let relations
  vizLetShop        VizLetShop?
  buyerOrders       VizLetOrder[]     @relation("BuyerOrders")
  shippingAddresses ShippingAddress[]
  paymentMethods    PaymentMethod[]

  @@index([username])
  @@index([email])
  @@index([phone])
  @@index([role])
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

// NextAuth models for database session support (optional but recommended)
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Content {
  id              String      @id @default(uuid())
  userId          String
  type            ContentType
  mediaUrl        String
  caption         String?
  hashtags        String[]
  quotableRegions Json?       // Array of quotable region objects with coordinates and approval type
  isFeatured      Boolean     @default(false)
  featuredAt      DateTime?
  isApproved      Boolean     @default(true)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  vizLists         VizList[]
  approvalRequests ApprovalRequest[]
  flags            ContentFlag[]
  vizLetProducts   VizLetProduct[]

  @@index([userId])
  @@index([type])
  @@index([createdAt])
  @@index([isFeatured])
  @@index([isApproved])
}

enum ContentType {
  PHOTO
  VIDEO
}

model Editorial {
  id          String    @id @default(uuid())
  userId      String
  title       String    // Editorial title (required)
  pages       Json      // Array of canvas page objects
  isDraft     Boolean   @default(true)
  publishedAt DateTime?
  isFeatured  Boolean   @default(false)
  featuredAt  DateTime?
  isApproved  Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user  User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  flags ContentFlag[]

  @@index([userId])
  @@index([publishedAt])
  @@index([isDraft])
  @@index([isFeatured])
  @@index([isApproved])
}

model VizList {
  id               String   @id @default(uuid())
  userId           String
  contentId        String
  quotableRegionId String?  // Reference to a specific quotable region in the content
  createdAt        DateTime @default(now())

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  content Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  @@unique([userId, contentId, quotableRegionId])
  @@index([userId])
  @@index([contentId])
}

model ApprovalRequest {
  id               String          @id @default(uuid())
  requesterId      String
  creatorId        String
  contentId        String
  quotableRegionId String?         // Reference to specific quotable region
  status           ApprovalStatus  @default(PENDING)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  // Relations
  requester User    @relation("RequesterApprovals", fields: [requesterId], references: [id], onDelete: Cascade)
  creator   User    @relation("CreatorApprovals", fields: [creatorId], references: [id], onDelete: Cascade)
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  @@index([requesterId])
  @@index([creatorId])
  @@index([contentId])
  @@index([status])
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

model SiteSettings {
  id                String   @id @default(uuid())
  // Site Identity
  siteName          String   @default("Viz.")
  siteDescription   String?
  seoTitle          String?
  seoDescription    String?
  seoKeywords       String[]
  
  // Design Settings
  primaryColor      String   @default("#1a1a1a")
  secondaryColor    String   @default("#f5f5f5")
  accentColor       String   @default("#007bff")
  fontColor         String   @default("#000000")
  fontFamily        String   @default("system")
  fontSize          String   @default("base")
  
  // Layout Settings
  sidebarPosition   String   @default("left")   // left, right, hidden
  headerStyle       String   @default("default") // default, minimal, full
  vizListLayout     String   @default("grid")    // grid, list, masonry
  profileLayout     String   @default("tabs")    // tabs, single-column
  feedLayout        String   @default("cards")   // cards, list, magazine
  
  // Feature Toggles
  enableComments    Boolean  @default(true)
  enableLikes       Boolean  @default(true)
  enableSharing     Boolean  @default(true)
  requireApproval   Boolean  @default(false)
  
  // Customization
  logoUrl           String?
  faviconUrl        String?
  
  updatedAt         DateTime @updatedAt
  updatedBy         String?  // User ID who made the change
  
  @@map("site_settings")
}

model AdminActivityLog {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action     String   // "USER_BANNED", "CONTENT_APPROVED", "SETTINGS_UPDATED", etc.
  targetType String?  // "USER", "CONTENT", "EDITORIAL", "SETTINGS"
  targetId   String?
  details    Json?    // Additional metadata
  ipAddress  String?
  createdAt  DateTime @default(now())
  
  @@map("admin_activity_logs")
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model ContentFlag {
  id          String      @id @default(uuid())
  contentId   String?
  content     Content?    @relation(fields: [contentId], references: [id], onDelete: Cascade)
  editorialId String?
  editorial   Editorial?  @relation(fields: [editorialId], references: [id], onDelete: Cascade)
  reportedBy  String
  reporter    User        @relation("FlagReporter", fields: [reportedBy], references: [id], onDelete: Cascade)
  reason      String
  status      FlagStatus  @default(PENDING)
  reviewedBy  String?
  reviewer    User?       @relation("FlagReviewer", fields: [reviewedBy], references: [id], onDelete: SetNull)
  reviewedAt  DateTime?
  createdAt   DateTime    @default(now())
  
  @@map("content_flags")
  @@index([contentId])
  @@index([editorialId])
  @@index([reportedBy])
  @@index([status])
}

enum FlagStatus {
  PENDING
  APPROVED
  REJECTED
  REMOVED
}

// Viz.Let E-commerce Models

model VizLetShop {
  id              String    @id @default(uuid())
  userId          String    @unique
  vizBizId        String    @unique // 16-digit unique ID
  shopName        String    // Can be different from username
  description     String?
  isActive        Boolean   @default(true)
  trialEndsAt     DateTime  // 1 year from creation for new users
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  products        VizLetProduct[]
  
  @@index([userId])
  @@index([vizBizId])
  @@index([isActive])
}

model VizLetProduct {
  id                    String    @id @default(uuid())
  shopId                String
  contentId             String    // References the quotable content
  quotableRegionId      String?   // Specific quotable region used
  productName           String
  productDescription    String
  productPhotos         String[]  // Array of photo URLs (minimum 5)
  price                 Float
  acceptedPaymentMethods String[] // Array of payment methods
  deliveryTime          String
  deliveryMethods       String[]
  customizationGuidelines String?
  giftWrappingGuidelines String?
  isActive              Boolean   @default(true)
  viewCount             Int       @default(0)
  purchaseCount         Int       @default(0)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  shop                  VizLetShop @relation(fields: [shopId], references: [id], onDelete: Cascade)
  content               Content    @relation(fields: [contentId], references: [id], onDelete: Cascade)
  orders                VizLetOrder[]
  
  @@index([shopId])
  @@index([contentId])
  @@index([isActive])
  @@index([createdAt])
}

model VizLetOrder {
  id                String      @id @default(uuid())
  buyerId           String
  productId         String
  quantity          Int         @default(1)
  totalAmount       Float
  status            OrderStatus @default(PENDING)
  shippingAddressId String
  paymentMethodId   String
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  
  buyer             User        @relation("BuyerOrders", fields: [buyerId], references: [id], onDelete: Cascade)
  product           VizLetProduct @relation(fields: [productId], references: [id], onDelete: Cascade)
  shippingAddress   ShippingAddress @relation(fields: [shippingAddressId], references: [id])
  paymentMethod     PaymentMethod @relation(fields: [paymentMethodId], references: [id])
  
  @@index([buyerId])
  @@index([productId])
  @@index([status])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

model ShippingAddress {
  id          String   @id @default(uuid())
  userId      String
  fullName    String
  address1    String
  address2    String?
  city        String
  state       String
  postalCode  String
  country     String
  phone       String
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders      VizLetOrder[]
  
  @@index([userId])
}

model PaymentMethod {
  id              String   @id @default(uuid())
  userId          String
  type            String   // "credit_card", "debit_card", "paypal", etc.
  lastFourDigits  String?
  expiryMonth     Int?
  expiryYear      Int?
  cardholderName  String?
  isDefault       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders          VizLetOrder[]
  
  @@index([userId])
}
