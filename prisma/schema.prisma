// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  username      String   @unique
  email         String?  @unique
  phone         String?  @unique
  password      String
  emailVerified Boolean  @default(false)
  phoneVerified Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  contents          Content[]
  editorials        Editorial[]
  vizLists          VizList[]
  approvalRequests  ApprovalRequest[] @relation("RequesterApprovals")
  creatorApprovals  ApprovalRequest[] @relation("CreatorApprovals")
  
  // NextAuth relations
  accounts Account[]
  sessions Session[]

  @@index([username])
  @@index([email])
  @@index([phone])
}

// NextAuth models for database session support (optional but recommended)
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Content {
  id              String   @id @default(uuid())
  userId          String
  type            ContentType
  mediaUrl        String
  caption         String?
  hashtags        String[]
  quotableRegions Json?    // Array of quotable region objects with coordinates and approval type
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  vizLists        VizList[]
  approvalRequests ApprovalRequest[]

  @@index([userId])
  @@index([type])
  @@index([createdAt])
}

enum ContentType {
  PHOTO
  VIDEO
}

model Editorial {
  id          String    @id @default(uuid())
  userId      String
  title       String    // Editorial title (required)
  pages       Json      // Array of canvas page objects
  isDraft     Boolean   @default(true)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([publishedAt])
  @@index([isDraft])
}

model VizList {
  id               String   @id @default(uuid())
  userId           String
  contentId        String
  quotableRegionId String?  // Reference to a specific quotable region in the content
  createdAt        DateTime @default(now())

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  content Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  @@unique([userId, contentId, quotableRegionId])
  @@index([userId])
  @@index([contentId])
}

model ApprovalRequest {
  id               String          @id @default(uuid())
  requesterId      String
  creatorId        String
  contentId        String
  quotableRegionId String?         // Reference to specific quotable region
  status           ApprovalStatus  @default(PENDING)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  // Relations
  requester User    @relation("RequesterApprovals", fields: [requesterId], references: [id], onDelete: Cascade)
  creator   User    @relation("CreatorApprovals", fields: [creatorId], references: [id], onDelete: Cascade)
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  @@index([requesterId])
  @@index([creatorId])
  @@index([contentId])
  @@index([status])
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}
